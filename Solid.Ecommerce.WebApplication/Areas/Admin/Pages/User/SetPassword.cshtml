@page "/admin/set-member-password/{id}"
@model Solid.Ecommerce.WebApplication.Areas.Admin.Pages.User.SetPasswordModel
@{
    ViewData["Title"] = "Đặt mật khẩu";
}

<h4>Thiết lập mật khẩu cho thành viên : @Model.user.UserName</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control mb-2" autocomplete="new-password" />
                <label asp-for="Input.NewPassword" class="form-label mb-2"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control mb-2" autocomplete="new-password" />
                <label asp-for="Input.ConfirmPassword" class="form-label mb-2"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary mb-2">Đặt mật khẩu</button>
            <a class="w-100 btn btn-lg btn-primary mb-2" asp-page="./Index">Danh sách thành viên</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
